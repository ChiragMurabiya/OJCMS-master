<body>
    <div class="row">
        <div class="top_strip"></div>
        <div class="container">
            <div class="sign_up_form">
                <div class="left_block col-md-4 col-sm-4">
                    <div class="logo">
                        <a href="#">
                            @if (eCMS.Shared.SiteMode.mode() == "Test System")
                            {<img src="@Url.Content("~/assets/images/ttlogo.png")" />

                            }
                            else
                            { <img src="@Url.Content("~/assets/images/logo.png")" />
                            }
                        </a>
                    </div>
                    <div class="login" style="padding-top:0px;">
                        @*<div style="color:red"> @eCMS.Shared.SiteMode.mode() </div>*@
                        
                        @RenderSection("hintsection", false)
                    </div>
                </div>
                <div class="right_block col-md-8 col-sm-8">
                    @RenderBody()
                </div>
            </div>
            <div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    @*@Scripts.Render("~/Scripts/Custom")*@
</body>
</html>
