<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="@Url.Content("~/assets/images/favicon.ico")" type="image/x-icon">
    <link rel="icon" href="@Url.Content("~/assets/images/favicon.ico")" type="image/x-icon">

    @*<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>*@

    <title>OneJamat Case Management System : @ViewBag.Title</title>

    <!-- Bootstrap core CSS -->
    @Styles.Render("~/assets/styles/external")
    @RenderSection("headsection", false)

    <!-- Just for debugging purposes. Don't actually copy this line! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
