@model eCMS.DataLogic.Models.Worker
@using eCMS.BusinessLogic.Helpers
@using eCMS.DataLogic.Models
@using eCMS.Shared
@if (Model.ID > 0)
{
    Model.IsAjax = true;
}
else
{
    Model.IsAjax = false; 
}
<div class="container candidate-list-main-container">
    <div class="row">
        <div class="col-lg-12 col-md-11 candidate-table-bg">
            <div class="row">
                <div class="col-md-12 col-sm-12 candidate-on-map">
                    <div class="row">
                        <div class="col-md-12 font-13 text-uppercase" style="padding-top: 6px; padding-right: 0;">
                            @if(Model.ID==0)
                            {
                                <label>
                                    <i class="fa fa-user"></i>Add Worker
                                </label>
                            }
                            else
                            {
                                <label>
                                    <i class="fa fa-user"></i>Update Worker
                                </label>
                            }
                        </div>
                    </div>
                </div>
            </div>
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.CreateDate)
            @Html.HiddenFor(model => model.CreatedByworkerID)
            @Html.HiddenFor(model => model.LastLoginDate)
            @Html.HiddenFor(model => model.LastPasswordChangeDate)
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group02">
                        <label class="col-sm-5 control-label labe-text">
                            @Html.LabelFor(model => model.FirstName)
                        </label>
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.FirstName)
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group02">
                        <label class="col-sm-5 control-label labe-text">
                            @Html.LabelFor(model => model.LastName)
                        </label>
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.LastName)
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group02">
                        <label class="col-sm-5 control-label labe-text">
                            @Html.LabelFor(model => model.EmailAddress)
                        </label>
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.EmailAddress)
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group02">
                        <label class="col-sm-5 control-label labe-text">
                            @Html.LabelFor(model => model.LoginName)
                        </label>
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.LoginName)
                        </div>
                    </div>
                </div>
            </div>
            @if(Model.ID>0)
            {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group02">
                        <label class="col-sm-5 control-label labe-text">
                            @Html.LabelFor(model => model.Password)
                        </label>
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.Password)
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group02">
                        <label class="col-sm-5 control-label labe-text">
                            @Html.LabelFor(model => model.ConfirmPassword)
                        </label>
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.ConfirmPassword)
                        </div>
                    </div>
                </div>
            </div>
            }
            else
            {
                @Html.HiddenFor(model => model.Password)
                @Html.HiddenFor(model => model.ConfirmPassword)
            }
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group02">
                        <label class="col-sm-5 control-label labe-text">
                            @Html.LabelFor(model => model.AllowLogin)
                        </label>
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.AllowLogin)
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group02">
                        <label class="col-sm-5 control-label labe-text">
                            @Html.LabelFor(model => model.IsActive)
                        </label>
                        <div class="col-sm-7">
                            @Html.EditorFor(model => model.IsActive)
                        </div>
                    </div>
                </div>
            </div>

            <div id="add_candidate3">
                @if (Model.IsAjax)
                {
                    <button class="btn btn-primary" id="btnSave" name="btnSaveWorker"><i class="fa fa-save"></i> Update</button>
                    <a href="@Url.Action(Constants.Actions.Index,Constants.Controllers.Worker)" class="btn btn-primary"><i class="fa fa-long-arrow-left"></i> Back to Worker List</a>
                }
                else
                {
                    <button type="submit" class="btn btn-primary" name="btnSave"><i class="fa fa-save"></i> Save & Continue <i class="fa fa-long-arrow-right"></i></button>
                    <a href="@Url.Action(Constants.Actions.Index,Constants.Controllers.Worker)" class="btn btn-primary"><i class="fa fa-long-arrow-left"></i> Back to Worker List</a>
                }

            </div>
            <br class="clear" />
        </div>
    </div>
</div>
